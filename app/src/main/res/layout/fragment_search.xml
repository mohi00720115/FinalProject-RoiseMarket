<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.search.fragment.SearchFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/search_cardView_fragment"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:iconifiedByDefault="false"
                android:queryHint="جستجو..."
                android:textDirection="rtl"
                app:defaultQueryHint="جستجو..."
                app:iconifiedByDefault="false"
                app:layout_constraintBottom_toTopOf="@id/containerView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:searchHintIcon="@drawable/baseline_search_24"
                app:searchIcon="@drawable/baseline_search_24"
                tools:ignore="MissingConstraints" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_cardView_fragment"
            tools:ignore="MissingConstraints">

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                tools:ignore="UselessParent">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/radio_group_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_indigo"
                    android:orientation="horizontal"
                    app:checkedChip="@+id/rbSearch_popularity">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/rbSearch_popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@color/light_azure"
                        android:fontFamily="@font/iransans_bold"
                        android:gravity="center_vertical|start"
                        android:tag="popularity"
                        android:text="پربازدید ترین"
                        android:textColor="@color/dark_indigo"
                        android:textSize="18sp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/rbSearch_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@color/light_azure"
                        android:fontFamily="@font/iransans_bold"
                        android:gravity="center_vertical|start"
                        android:tag="rating"
                        android:text="بالاترین امتیاز"
                        android:textColor="@color/dark_indigo"
                        android:textSize="18sp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/rbSearch_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@color/light_azure"
                        android:fontFamily="@font/iransans_bold"
                        android:gravity="center_vertical|start"
                        android:tag="date"
                        android:text="جدید ترین"
                        android:textColor="@color/dark_indigo"
                        android:textSize="18sp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/rbSearch_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@color/light_azure"
                        android:fontFamily="@font/iransans_bold"
                        android:gravity="center_vertical|start"
                        android:tag="price"
                        android:text="گران ترین"
                        android:textColor="@color/dark_indigo"
                        android:textSize="18sp" />


                </com.google.android.material.chip.ChipGroup>


            </HorizontalScrollView>


            <!--            <TextView-->
