<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#f1f1f1"
        app:cardCornerRadius="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView_adapter4"
                android:layout_width="170dp"
                android:layout_height="230dp"
                android:layout_margin="6dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImage20"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_adapter4"
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:text="salam donya :)"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:paddingEnd="5dp"
                android:textSize="21sp"
                android:maxLines="3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_adapter4"
                app:layout_constraintEnd_toStartOf="@+id/imageView_adapter4"
                app:layout_constraintTop_toTopOf="@+id/imageView_adapter4"
                app:layout_constraintVertical_bias="0.111"
                tools:ignore="MissingConstraints,RtlSymmetry" />

            <RatingBar
                android:id="@+id/rating_bar4"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:numStars="5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintBottom_toTopOf="@+id/tv_price4"
                app:layout_constraintEnd_toStartOf="@+id/imageView_adapter4"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_adapter4"
                app:layout_constraintVertical_bias="0.5"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_price4"
                android:layout_width="210dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:text="23000000 تومان"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="21sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/rating_bar4"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>