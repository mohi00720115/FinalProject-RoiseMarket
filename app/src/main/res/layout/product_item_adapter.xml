<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            app:cardBackgroundColor="#f2f2f2"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/imageView_product_adapter"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="115dp"
                    android:layout_height="20dp"
                    android:background="@drawable/tv_price_bg"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/tomanFee"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/imageView_product_adapter"
                    app:layout_constraintStart_toStartOf="@+id/imageView_product_adapter"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_product_adapter" />

                <TextView
                    android:id="@+id/tv_product_adapter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/nameProduct"
                    android:textColor="#465a65"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView_product_adapter"
                    app:layout_constraintStart_toStartOf="@+id/imageView_product_adapter"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>