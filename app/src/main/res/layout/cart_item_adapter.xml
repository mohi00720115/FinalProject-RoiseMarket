<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_cart_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardBackgroundColor="#f1f1f1"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/dark_indigo"
            app:strokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView_cart_item"
                    android:layout_width="170dp"
                    android:layout_height="230dp"
                    android:layout_margin="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImage20" />

                <TextView
                    android:id="@+id/tv_productName_cart_item"
                    android:layout_width="210dp"
                    android:layout_height="100dp"
                    android:maxLines="4"
                    android:paddingEnd="4dp"
                    android:text="نام محصول در سبد خرید"
                    android:textColor="@color/black"
                    android:textDirection="rtl"
                    android:textSize="21sp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView_cart_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView_cart_item"
                    tools:ignore="MissingConstraints,RtlSymmetry" />

                <TextView
                    android:id="@+id/tvNumberOfProduct_cart_item"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:paddingEnd="5dp"
                    android:text="تعداد محصول"
                    android:textColor="@color/black"
                    android:textDirection="rtl"
                    android:textSize="21sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_price_cart_item"
                    app:layout_constraintEnd_toEndOf="@+id/tv_price_cart_item"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_price_cart_item"
                    app:layout_constraintTop_toBottomOf="@+id/tv_productName_cart_item"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_price_cart_item"
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:paddingEnd="5dp"
                    android:text="جمع نهایی محصول"
                    android:textColor="@color/red"
                    android:textDirection="rtl"
                    android:textSize="21sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_cart_adapter"
                    app:layout_constraintBottom_toTopOf="@+id/btn_cart_adapter"
                    app:layout_constraintEnd_toEndOf="@+id/tv_productName_cart_item"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cart_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/red"
                    android:text="حذف"
                    android:textColor="@color/light_azure"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_price_cart_item"
                    app:layout_constraintStart_toStartOf="@+id/tv_price_cart_item"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>